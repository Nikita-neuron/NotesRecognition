<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#070B31">

    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/noTabsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UselessParent"
        android:gravity="center"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/noTabs"
            android:textSize="10pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"/>
    </LinearLayout>

    <ScrollView
        android:layout_weight="20"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/tabCards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <Button
            app:backgroundTint="@null"
            android:id="@+id/createTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/new_tab_button_background"
            android:text="Создать новую табулатуру"
            android:textColor="#fff"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>

</LinearLayout>