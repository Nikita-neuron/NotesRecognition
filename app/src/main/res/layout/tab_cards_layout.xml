<!--                                    android:layout_width="30dp"-->
<!--                                    android:layout_height="30dp"-->
<!--                                    android:layout_marginStart="30dp"-->
<!--                                    android:layout_marginTop="40dp"-->
<!--                                    android:background="@drawable/rectangle_2"-->
<!--                                    android:paddingStart="7dp"-->
